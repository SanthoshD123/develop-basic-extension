{
  "manifest_version": 3,
  "name": "Smart Meeting Attendance Tracker",
  "description": "Tracks attendance across meetings",
  "version": "1.0",
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}